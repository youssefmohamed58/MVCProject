@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<br />

<div class="m-2">
	<form class="row offset-2" asp-action="Index">
		<div class="input-group">
			<div class="col-8">
				<input class="form-control" type="text" name="SearchValue" placeholder="User's Name'" />
			</div>

			<div class="col-4">
				<button id="search-button" type="submit" class="btn btn-primary">
					<i class="fas fa-search"></i>
				</button>
			</div>

		</div>
	</form>
</div>

<br />


@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th scope="col">@Html.DisplayNameFor(U=>U.Id)</th>
				<th scope="col">@Html.DisplayNameFor(U=>U.FName)</th>
				<th scope="col">@Html.DisplayNameFor(U=>U.LName)</th>
				<th scope="col">@Html.DisplayNameFor(U=>U.Email)</th>
				<th scope="col">@Html.DisplayNameFor(U=>U.PhoneNumber)</th>
				<th scope="col">@Html.DisplayNameFor(U=>U.Roles)</th>
				<th scope="col">Details</th>
				<th scope="col">Edit</th>
				<th scope="col">Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var User in Model)
			{
				<tr>
					<td>@User.Id</td>
					<td>@User.FName</td>
					<td>@User.LName</td>
					<td>@User.Email</td>
					<td>@User.PhoneNumber</td>
					<td>@string.Join(',', User.Roles)</td>
					
					<partial name="_ButtonsPartialView" model="@User.Id" />

				</tr>
			}
		</tbody>
	</table>
}

else
{
	<div class="alert alert-warning" role="alert">
		<h4>This is No Users</h4>
	</div>
}


